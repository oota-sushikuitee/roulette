{
  "extends": [
    "github>oota-sushikuitee/renovate-config"
  ],
  "packageRules": [
    {
      "allowedVersions": "/^[0-9]+[24680]\\.[0-9]+\\.0$/",
      "groupName": "Node.js dependencies",
      "matchPackageNames": [
        "/node/",
        "/^@types/node$/"
      ]
    },
    {
      "groupName": "@types dependencies",
      "matchPackageNames": [
        "/^@types//"
      ]
    },
    {
      "groupName": "linting dependencies",
      "matchPackageNames": [
        "/^eslint/",
        "/^prettier/"
      ]
    }
  ]
}
